.tabs
  margin-top: 2em
  border-top: 1px solid var(--grayishBlue)
  &__link
    border-bottom: 1px solid var(--grayishBlue)
  &__content
    display: none
    img 
      max-width 100%
  &__grid
    margin-top: 4em
  label
    padding: 1em 0
    display: block
    position: relative
    &:after
      display: none
      content: ""
      height: 5px
      position: absolute
      bottom: 0
      left: 0
      width: 50%
      transform: translateX(50%)
      box-shadow: inset 0 -15px 0 -10px red
  input 
    display: none
  input[id="bookmarking"]:checked
    & ~ ul [for="bookmarking"]:after
      display: block
    & ~ .tabs__grid #tab-bookmarking
      display: block    
  input[id="searching"]:checked
    & ~ ul [for="searching"]:after
      display: block
    & ~ .tabs__grid #tab-searching
      display: block  
  input[id="sharing"]:checked
    & ~ ul [for="sharing"]:after
      display: block
    & ~ .tabs__grid #tab-sharing
      display: block  
